  <!-- racial layout
  -->
  <layout
    id="frameworkchoices">
    <portalref portal="fraChooseTable1" />
    <portalref portal="fraChooseTable2" />
    <portalref portal="fraChooseTable3" />
    <portalref portal="fraChooseTable4" />
    <portalref portal="fraChooseTable5" />

    <!-- This script sizes and positions the layout and its child visual elements. -->
    <position><![CDATA[
      ~freeze our table in advancement mode to disable adding new choices
      ~Note: All freezing must be done *before* any positioning is performed.
      if (state.iscreate = 0) then
        portal[fraChooseTable1].freeze = 1
        portal[fraChooseTable2].freeze = 1
        portal[fraChooseTable3].freeze = 1
        portal[fraChooseTable4].freeze = 1
        portal[fraChooseTable5].freeze = 1
        endif
		
      portal[fraChooseTable1].visible = 0
	  if (hero.child[FrameworkHelper].field[ehFrameExp].isempty = 0) then
	    portal[fraChooseTable1].visible = 1
		endif
		
      portal[fraChooseTable2].visible = 0
	  if (hero.child[FrameworkHelper].field[ehFrameExp2].isempty = 0) then
	    portal[fraChooseTable2].visible = 1
		endif
		
      portal[fraChooseTable3].visible = 0
	  if (hero.child[FrameworkHelper].field[ehFrameExp3].isempty = 0) then
	    portal[fraChooseTable3].visible = 1
		endif
		
      portal[fraChooseTable4].visible = 0
	  if (hero.child[FrameworkHelper].field[ehFrameExp4].isempty = 0) then
	    portal[fraChooseTable4].visible = 1
		endif
		
      portal[fraChooseTable5].visible = 0
	  if (hero.child[FrameworkHelper].field[ehFrameExp5].isempty = 0) then
	    portal[fraChooseTable5].visible = 1
		endif
	  
      perform portal[fraChooseTable1].autoplace
      perform portal[fraChooseTable2].autoplace[10]
      perform portal[fraChooseTable3].autoplace[10]
      perform portal[fraChooseTable4].autoplace[10]
      perform portal[fraChooseTable5].autoplace[10]
      
      ]]></position>

    </layout>

