<?xml version="1.0" encoding="UTF-8"?>

<!-- This file contains the definitions of how the Editor should handle all the
      various publicly accessible objects (i.e. component sets) within the game
      system. A separate "editthing" elemenet is defined for each component set,
      along with the appropriate details for how to configure each facet via
      "inputthing" elements.
-->

<document signature="Hero Lab Data">

  <!-- TCA - Framework Ability editor -->
  <!-- Languages editthing -->
  <editthing
    compset="Language"
    name="Languages"
    prefix="lg"
    description="Languages"
    summary="Defines a language that can be added to a character.">
    </editthing>

  <!-- ItemMods editthing -->
  <editthing
    group="Rifts"
    compset="ItemMod"
    name="Item Modifications"
    prefix="imod"
    description="Abilities defined as Item Modifications."
    summary="Defines Item Modifications that can be selected through the item mod gizmo.">

    <inputthing
      name="Mod Category"
      helptext="Specify what type of Item Mod this is for.">
      <it_tagpick group="ItemModCat" tag="?"/>
      </inputthing>
    <inputthing
      name="Mod Category"
      helptext="Specify what type of Item Mod this is for.">
      <it_tagpick group="ItemModType" tag="?"/>
      </inputthing>
    <inputthing
      name="Weapon Effect?"
      helptext="Specify what effect this is mod adds to a weapon.">
      <it_taglist group="Weapon" tag="?"/>
      </inputthing>
	  
    </editthing>
	
  <!-- Melee editthing - for melee weapons -->
  <editthing
    group="Rifts"
    compset="MeleeSRA"
    name="Hand Weapon (Rifts)"
    prefix="wp"
    description="Armor, vehicles, and simple equipment all have their own tabs for creating objects of those types."
    summary="Defines a melee weapon that can be selected on the Armory tab.">
    <inputthing
      name="Weapon Type"
      helptext="Specify the type for this weapon.">
      <it_tagpick group="WeaponType" tag="?" require="yes" deftag="MedBlades"/>
      </inputthing>
    <inputthing
      name="Weapon Die"
      helptext="Specify the weapon die used by this weapon. If the weapon does basic damage of 'Str' or if a special damage is required, don't specify a weapon die.">
      <it_tagpick group="WeaponDie" tag="?"/>
      </inputthing>
    <inputthing
      name="Special Damage"
      helptext="Specify the non-standard damage rating of the weapon. Leave blank unless the weapon has special damage that is not tied to a weapon die.">
      <it_field field="wpDamage"/>
      </inputthing>
    <inputthing
      name="Attack Bonus"
      helptext="Specify the attack bonus of the weapon.">
      <it_field field="wpBonus"/>
      </inputthing>
    <inputthing
      name="Damage Bonus"
      helptext="Specify the damage bonus of the weapon (may be negative).">
      <it_field field="wpDmgBonus"/>
      </inputthing>
    <inputthing
      name="Parry Bonus"
      helptext="Specify the parry bonus of the weapon (may be negative).">
      <it_field field="wpParry"/>
      </inputthing>
    <inputthing
      name="Armor Piercing"
      helptext="Specify the armor piercing rating of the weapon.">
      <it_field field="wpPiercing"/>
      </inputthing>
    <inputthing
      name="Weapon Reach"
      helptext="Specify the reach of the weapon.">
      <it_field field="wpReach"/>
      </inputthing>
    <inputthing
      name="Weapon Damage Bonus Text"
      helptext="Additional Damage Bonus Text to be placed between the base damage and any standard damage bonus.">
      <it_field field="wpDmgBoTxt"/>
      </inputthing>
    <inputthing
      name="Strength Requirement Die"
      helptext="Specify the minimum strength required die type for this weapon. If the weapon uses a weapon die or has no strength requirement, do not specify.">
      <it_tagpick group="StrReqDie" tag="?"/>
      </inputthing>
    <inputthing
      name="Activated by User?"
      helptext="Specify whether this armor has an effect that can be activated by the user">
      <it_tagcheck group="User" tag="Activation"/>
      </inputthing>
    <inputthing
      name="Actvation Text"
      helptext="Specify text displayed with the activation checkbox.">
      <it_field field="wpActiveText"/>
      </inputthing>
    <inputthing
      name="Special Traits"
      helptext="Specify any number of special traits that apply to this Weapon.">
      <it_taglist group="Weapon" tag="?" />
      </inputthing>	  
    <inputthing
      name="Cost"
      helptext="Specify the standard cost of the item, with a value of 0 meaning it is free.">
      <it_field field="grCost"/>
      </inputthing>
    <inputthing
      name="Weight"
      helptext="Specify the weight of the item in pounds.">
      <it_field field="gearWeight"/>
      </inputthing>
    <inputthing
      name="Two-Handed Weapon?"
      helptext="Specify whether this weapon is two-handed.">
      <it_tagcheck group="Equipment" tag="TwoHand"/>
      </inputthing>
    <inputthing
      name="Special Behaviors"
      helptext="Specify any special behaviors for the weapon of which the user should be reminded.">
      <it_field field="wpSpecial"/>
      </inputthing>
    <inputthing
      name="Natural Attack?"
      helptext="Specify whether this weapon should be treated as a natural attack.">
      <it_tagcheck group="Equipment" tag="Natural"/>
      </inputthing>
    <inputthing
      name="Hide from User?"
      helptext="Specify whether this weapon should be hidden from the user-selectable weapon list.">
      <it_tagcheck group="Hide" tag="Equipment"/>
      </inputthing>
    <inputthing
      name="Ultra Tech?"
      helptext="Specify whether this is considered Ultra Tech from the Sci-Fi Companion.">
      <it_tagcheck group="Equipment" tag="UltraTech"/>
      </inputthing>
    <inputthing
      name="Treat as Standard Gear"
      helptext="Specify whether this item is designated as 'standard gear' that can be readily omitted from use with selected Savage Settings.">
      <it_tagcheck group="Equipment" tag="Standard"/>
      </inputthing>
    <inputthing
      name="Usable with Mod Slots and no Slot Cost?"
      helptext="Specify whether this weapon is usable in Equipment Modification Slots from the Sci-Fi Companion. Note that this only needs to be selected if there is not a value in 'Modification Slots Used'">
      <it_tagcheck group="Equipment" tag="ModSlotUse"/>
      </inputthing>
    </editthing>

